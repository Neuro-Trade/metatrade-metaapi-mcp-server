{
  "name": "metaapi-mcp-server",
  "description": "MCP server for MetaAPI trading platform",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/metaapi-mcp-server.git"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^5.1.0",
    "metaapi.cloud-sdk": "^29.0.0",
    "ws": "^8.18.3"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "example:rpc": "node -r dotenv/config ./example.js",
    "docker:build": "docker build -t metaapi-mcp-server .",
    "docker:run": "docker run -d --name metaapi-mcp -p 80:80 --restart unless-stopped metaapi-mcp-server",
    "docker:stop": "docker stop metaapi-mcp && docker rm metaapi-mcp",
    "docker:logs": "docker logs -f metaapi-mcp",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
